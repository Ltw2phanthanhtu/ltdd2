<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_empty="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="3dp"
                android:top="25dp"
                android:bottom="25dp"
                android:drawable="@drawable/arrow_left">
            </item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item
                android:left="0dp"
                android:right="3dp"
                android:top="27dp"
                android:bottom="27dp"
                android:drawable="@drawable/arrow_up">
            </item>
        </layer-list>
    </item>
</selector>