<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.pmsv.diadiemcaobang.GocChupActivity"
    android:background="@drawable/background_home_below">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarGocChup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetStartWithNavigation="0dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@color/colorBackgroundToolBar"
        app:titleTextColor="#fff"
        app:navigationIcon="?attr/homeAsUpIndicator"/>

    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/sliderGocChup"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_below="@+id/toolbarGocChup" />

    <TextView
        android:id="@+id/txtTitleGocChup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/sliderGocChup"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitleGocChup"
        android:src="@drawable/line_below"
        android:layout_marginBottom="5dp"
        android:layout_centerInParent="true"
        android:tint="@color/com_facebook_button_background_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line">
        <TextView
            android:id="@+id/textViewGocChup"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"/>
    </ScrollView>


</RelativeLayout>
